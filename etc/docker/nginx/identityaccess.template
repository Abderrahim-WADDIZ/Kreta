server {
    server_name ${IDENTITY_ACCESS_HOST};
    root /var/www/identityaccess/src/Kreta/IdentityAccess/Infrastructure/Ui/Http/Symfony/public;

    location / {
        try_files $uri @rewriteapp;
    }

    location @rewriteapp {
        rewrite ^(.*)$ /app.php/$1 last;
    }

    location ~ ^/(app)\.php(/|$) {
        fastcgi_pass php-upstream;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param HTTPS off;
    }

    error_log /var/log/nginx/identityaccess_error.log;
    access_log /var/log/nginx/identityaccess_access.log;
}
