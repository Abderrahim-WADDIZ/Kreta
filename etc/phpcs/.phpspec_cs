$fixers = include __DIR__ . '/common.php';

$fixers[] = '-visibility';

$finder = Symfony\CS\Finder::create()
    ->files()
    ->name('*Spec.php')
    ->notPath('var')
    ->notPath('vendor')
    ->in([
        __DIR__ . '/../../SharedKernel',
        __DIR__ . '/../../TaskManager',
    ]);

return Symfony\CS\Config::create()
    ->level(Symfony\CS\FixerInterface::SYMFONY_LEVEL)
    ->finder($finder)
    ->fixers($fixers);
