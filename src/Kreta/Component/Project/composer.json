{
    "name": "kreta/project",
    "description": "Kreta project component",
    "keywords": ["project", "manager", "development", "tool", "component"],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                                 ">=5.4",

        "kreta/core":                          "dev-master",
        "kreta/media":                         "dev-master",
        "kreta/user":                          "dev-master",
        "kreta/workflow":                      "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec":                     "~2.1",
        "henrikbjorn/phpspec-code-coverage":   "~1.0",
        "satooshi/php-coveralls":              "0.6.1",
        "squizlabs/php_codesniffer":           "~1.0",
        "phpmd/phpmd":                         "~2.1"
    },
    "autoload": {
        "psr-4": { "Kreta\\Component\\Project\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Kreta\\Component\\Project\\spec\\": "spec/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
