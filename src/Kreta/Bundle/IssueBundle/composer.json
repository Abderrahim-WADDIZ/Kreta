{
    "name": "kreta/issue-bundle",
    "description": "Kreta core bundle",
    "keywords": ["project", "manager", "development", "tool", "issue", "bundle"],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                                 ">=5.4",

        "kreta/core-bundle":                   "~0.3.0",
        "kreta/issue":                         "~0.3.0"
    },
    "require-dev": {
        "phpspec/phpspec":                     "~2.2"
    },
    "autoload": {
        "psr-4": { "Kreta\\Bundle\\IssueBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Kreta\\Bundle\\IssueBundle\\spec\\": "spec"}
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
