{
    "name": "kreta/api-bundle",
    "description": "Kreta api bundle",
    "keywords": ["project", "manager", "development", "tool", "api", "bundle"],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                                  ">=5.4",
        "friendsofsymfony/oauth-server-bundle": "~1.4",
        "friendsofsymfony/rest-bundle":         "~1.4",
        "nelmio/api-doc-bundle":                "~2.5",
        "nelmio/cors-bundle":                   "~1.3",
        "jms/serializer-bundle":                "0.13.x",
        "willdurand/hateoas-bundle":            "0.3.x",

        "kreta/core-bundle":                    "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec":                     "~2.1",
        "henrikbjorn/phpspec-code-coverage":   "~1.0",
        "satooshi/php-coveralls":              "0.6.1",
        "squizlabs/php_codesniffer":           "~1.0",
        "phpmd/phpmd":                         "~2.1"
    },
    "autoload": {
        "psr-4": { "Kreta\\Bundle\\ApiBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Kreta\\Bundle\\ApiBundle\\spec\\": "spec/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev"
}
