{% extends 'KretaWebBundle:blocks:widget.html.twig' %}

{% block widgetClass %}{% endblock %}

{% block widgetIcon %}fa-gear{% endblock %}

{% block widgetTitle %}Actions{% endblock %}

{% block widgetContent %}
    <div class="kreta-actions">
        <a href="{{ url('kreta_web_issue_edit', {
            projectShortName: issue.project.shortName,
            issueNumber: issue.numericId}) }}">
            <i class="fa fa-pencil"></i> Edit issue
        </a>
        <hr noshade>
        {% for transition in issue.status.transitions %}
        <a href="{{ url('kreta_web_issue_change_status', {
                        projectShortName: issue.project.shortName,
                        issueNumber: issue.numericId,
                        transitionId: transition.id
        }) }}">
            {{ transition.name }}
        </a>
        {% endfor %}
    </div>
{% endblock %}
