{
    "name": "kreta/core-bundle",
    "description": "Kreta core bundle",
    "keywords": [
        "project",
        "manager",
        "development",
        "tool",
        "core",
        "bundle"
    ],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                                  ">=5.4",
        "symfony/framework-bundle":             "^2.7|^3.0",
        "friendsofsymfony/oauth-server-bundle": "^1.4.3",
        "friendsofsymfony/rest-bundle":         "^1.7",
        "jms/serializer-bundle":                "^1.1",
        "kreta/core":                           "^0.4.0",
        "kreta/simple-api-doc-bundle":          "^0.3.3",
        "nelmio/cors-bundle":                   "^1.4",
        "willdurand/hateoas-bundle":            "^1.1"
    },
    "require-dev": {
        "phpspec/phpspec":                      "^2.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSOAuthServerBundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSUserBundle"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kreta\\Bundle\\CoreBundle\\": ""
        },
        "exclude-from-classmap": ["/spec/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Kreta\\Bundle\\CoreBundle\\spec\\": "spec/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
