{
    "name": "kreta/notification-bundle",
    "description": "Kreta notification bundle",
    "keywords": ["project", "management", "development", "tool", "notification", "component"],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                                 ">=5.4",
        "symfony/config":                      "~2.3",
        "symfony/dependency-injection":        "~2.3",
        "symfony/http-kernel":                 "~2.3",
        "kreta/notification":                  "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec":                     "2.1.x-dev",
        "henrikbjorn/phpspec-code-coverage":   "1.0.x-dev",
        "satooshi/php-coveralls":              "0.6.1",
        "squizlabs/php_codesniffer":           "1.*",
        "phpmd/phpmd":                         "2.1.1"
    },
    "autoload": {
        "psr-4": { "Kreta\\Bundle\\NotificationBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Kreta\\Bundle\\NotificationBundle\\spec\\": "spec/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev"
}
