<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Kreta\TaskManager\Infrastructure\Domain\Model\Organization\DoctrineMember" table="member">
        <id name="surrogateUserId" type="string" column="user_id">
            <generator strategy="NONE"/>
        </id>
        <id name="surrogateOrganizationId" type="string" column="organization_id" association-key="true">
            <generator strategy="NONE"/>
        </id>

        <field name="createdOn" type="datetime" column="created_on" nullable="false"/>
        <field name="updatedOn" type="datetime" column="updated_on" nullable="false"/>

        <many-to-one field="surrogateOrganizationId" target-entity="Kreta\TaskManager\Domain\Model\Organization\Organization">
            <join-column name="organization_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
