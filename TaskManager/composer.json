{
    "name": "kreta/task-manager",
    "description": "Task Manager core Bounded Context of Kreta",
    "keywords": [
        "project",
        "manager",
        "development",
        "tool",
        "bc",
        "core",
        "task-manager"
    ],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php": "^7.0",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.2",
        "doctrine/orm": "^2.5",
        "incenteev/composer-parameter-handler": "^2.0",
        "kreta/shared-kernel": "0.7.x-dev",
        "overblog/graphql-bundle": "^0.6.0",
        "sensio/distribution-bundle": "^5.0",
        "symfony/monolog-bundle": "^2.8",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/symfony": "3.1.*"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.12",
        "phpspec/phpspec": "^3.1"
    },
    "scripts": {
        "cs": [
            "php-cs-fixer fix --config-file=.php_cs",
            "php-cs-fixer fix --config-file=.phpspec_cs"
        ],
        "test": "phpspec run"
    },
    "autoload": {
        "psr-4": {
            "Kreta\\TaskManager\\": "src/",
            "Kreta\\TaskManager\\Tests\\": "tests/"
        },
        "exclude-from-classmap": [
          "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQL\\Tests\\": "vendor/webonyx/graphql-php/tests/"
        }
    },
    "extra": {
        "incenteev-parameters": {
            "file": "parameters.yml"
        },
        "branch-alias": {
            "dev-master": "0.7.x-dev"
        }
    }
}
